  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jungyoonlim/pictorial.git"
  },
  "keywords": [
    "design-tool",
    "color",
    "typography",
    "creative",
    "webgl",
    "performance",
    "virtualization",
    "ai-powered"
